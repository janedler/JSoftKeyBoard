<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/soft_keyboard_top_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.zhy.autolayout.AutoFrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/keyborad_line" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/keyborad_line"
        android:orientation="horizontal">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">


            <Button
                android:id="@+id/soft_keyboard_btn_1"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_weight="1.0"
                android:background="@drawable/cfp_keyborad_item_bg"
                android:text="1"
                android:tag="49"
                android:onClick="keySoftClick"
                android:textColor="@color/keyborad_black"
                android:textSize="52px" />

            <Button
                android:id="@+id/soft_keyboard_btn_4"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_marginTop="1px"
                android:layout_weight="1.0"
                android:background="@drawable/cfp_keyborad_item_bg"
                android:text="4"
                android:tag="52"
                android:textColor="@color/keyborad_black"
                android:textSize="52px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1px"
            android:layout_weight="1.0"
            android:orientation="vertical">


            <Button
                android:id="@+id/soft_keyboard_btn_2"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_weight="1.0"
                android:background="@drawable/cfp_keyborad_item_bg"
                android:text="2"
                android:tag="50"
                android:textColor="@color/keyborad_black"
                android:textSize="52px" />


            <Button
                android:id="@+id/soft_keyboard_btn_5"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_marginTop="1px"
                android:layout_weight="1.0"
                android:background="@drawable/cfp_keyborad_item_bg"
                android:text="5"
                android:tag="53"
                android:textColor="@color/keyborad_black"
                android:textSize="52px" />

        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1px"
            android:layout_weight="1.0"
            android:orientation="vertical">


            <Button
                android:id="@+id/soft_keyboard_btn_3"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_weight="1.0"
                android:background="@drawable/cfp_keyborad_item_bg"
                android:text="3"
                android:tag="51"
                android:textColor="@color/keyborad_black"
                android:textSize="52px" />


            <Button
                android:id="@+id/soft_keyboard_btn_6"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_marginTop="1px"
                android:layout_weight="1.0"
                android:background="@drawable/cfp_keyborad_item_bg"
                android:text="6"
                android:tag="54"
                android:textColor="@color/keyborad_black"
                android:textSize="52px" />

        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/soft_keyboard_btn_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1.0"
            android:tag="-1"
            android:background="@drawable/cfp_keyborad_item_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80px"
                android:layout_height="70px"
                android:layout_weight="1.0"
                android:src="@mipmap/keyboard_delete" />

        </com.zhy.autolayout.AutoLinearLayout>






    </com.zhy.autolayout.AutoLinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/keyborad_line"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soft_keyboard_line_1"
        android:background="@color/keyborad_line"
        android:orientation="horizontal">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/soft_keyboard_btn_7"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_weight="1.0"
                    android:background="@drawable/cfp_keyborad_item_bg"
                    android:text="7"
                    android:tag="55"
                    android:textColor="@color/keyborad_black"
                    android:textSize="52px" />


                <Button
                    android:id="@+id/soft_keyboard_btn_8"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_marginLeft="1px"
                    android:layout_weight="1.0"
                    android:background="@drawable/cfp_keyborad_item_bg"
                    android:text="8"
                    android:tag="56"
                    android:textColor="@color/keyborad_black"
                    android:textSize="52px" />


                <Button
                    android:id="@+id/soft_keyboard_btn_9"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_marginLeft="1px"
                    android:layout_weight="1.0"
                    android:background="@drawable/cfp_keyborad_item_bg"
                    android:text="9"
                    android:tag="57"
                    android:textColor="@color/keyborad_black"
                    android:textSize="52px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginTop="1px"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/soft_keyboard_btn_0"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:paddingRight="1px"
                    android:layout_weight="1.0"
                    android:background="@drawable/cfp_keyborad_item_bg"
                    android:text="0"
                    android:tag="48"
                    android:textColor="@color/keyborad_black"
                    android:textSize="52px" />



                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/soft_keyboard_btn_hint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1px"
                    android:layout_weight="2.0"
                    android:tag="-3"
                    android:background="@drawable/cfp_keyborad_item_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80px"
                        android:layout_height="70px"
                        android:src="@mipmap/keyboard_drawback" />

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>


        <Button
            android:id="@+id/soft_keyboard_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.0"
            android:layout_marginLeft="1px"
            android:tag="-2"
            android:background="@drawable/cfp_keyborad_confirm"
            android:text="确定"
            android:textColor="@color/keyborad_write"
            android:textSize="54px" />




    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
